<?xml version="1.0" encoding="utf-8"?>
<tools:LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="10dp"
              tools:context=".RegisterIdentificationWindow">
    <EditText
        android:id="@+id/register_input_phone_number_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textedit_border"
        android:padding="10dp"
        android:inputType="phone"
        android:hint="请输入11位手机号码"/>
    <EditText
        android:id="@+id/register_input_password_edittext"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textedit_border"
        android:padding="10dp"
        android:inputType="textPassword"
        android:hint="请输入密码（数字或大小写字母或特殊字符）"/>
    <EditText
        android:id="@+id/register_again_input_password_edittext"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textedit_border"
        android:padding="10dp"
        android:inputType="textPassword"
        android:hint="请再次输入密码"/>
    <Button
        android:id="@+id/register_confirm_btn"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_selector"
        android:text="注册"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center">
        <CheckBox
            android:id="@+id/register_accept_protocol_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="我已阅读并同意"/>
        <TextView
            android:id="@+id/register_service_protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_blue_dark"
            android:clickable="true"
            android:text="注册服务协议"/>
    </LinearLayout>

</tools:LinearLayout>