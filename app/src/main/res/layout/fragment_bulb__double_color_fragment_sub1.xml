<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:attrs="http://schemas.android.com/apk/res-auto"
    tools:context="com.gta.administrator.infraredcontrol.bulb.Bulb_DoubleColorFragmentSub1">

    <RelativeLayout
        android:id="@+id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tv_num_bg_selector"
            android:src="@mipmap/icon_open_64"

            />
        <ImageButton
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tv_num_bg_selector"
            android:src="@mipmap/icon_close_64"

            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_2"
        android:layout_below="@id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorDivide">
        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/direction_control_layout" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_3"
        android:layout_below="@id/layout_2"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true">

        <com.gta.administrator.infraredcontrol.other.MyGradLayoutItem
            style="@style/ItemAttrs3"
            android:layout_marginRight="50dp"
            attrs:gradlayoutSrc="@mipmap/icon_night_light_64"
            attrs:gradlayoutText="小夜灯"
            />
        <com.gta.administrator.infraredcontrol.other.MyGradLayoutItem
            style="@style/ItemAttrs3"
            android:layout_marginLeft="50dp"
            attrs:gradlayoutSrc="@mipmap/icon_leutral_light_64"
            attrs:gradlayoutText="中性灯"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="30dp"
        android:layout_below="@id/layout_3"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageButton
            style="@style/ItemAttrs3"
            android:src="@mipmap/icon_switch_64"
            />
        <ImageButton
            style="@style/ItemAttrs3"
            android:src="@mipmap/icon_switch_64"

            />
        <ImageButton
            style="@style/ItemAttrs3"
            android:src="@mipmap/icon_switch_64"

            />
        <ImageButton
            style="@style/ItemAttrs3"
            android:src="@mipmap/icon_switch_64"

            />
    </LinearLayout>



</RelativeLayout>
