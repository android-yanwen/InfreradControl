<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/yk_ctrl_background"
    tools:context="com.gta.administrator.infraredcontrol.air_condition.AirConditionControlActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@mipmap/bg_program_kinds">
        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">
            <TextView
                android:id="@+id/air_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:text="26"
                android:textColor="@color/colorWhite"
                android:textSize="80sp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/yk_ctrl_temperature"/>
            <LinearLayout
                android:layout_toRightOf="@id/linearlayout"
                android:layout_width="wrap_content"
                android:layout_height="85dp">
                <ImageView
                    android:id="@+id/air_mode_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom" />
                <TextView
                    android:id="@+id/air_mode_type"
                    android:gravity="bottom"
                    android:layout_width="41dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorWhite"
                    android:text="制冷"/>

            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/air_text_wind_speed"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:textColor="@color/colorWhite"
            android:text="风速自动"/>
        <TextView
            android:id="@+id/air_mode_wind_angle"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:text="扫风自动"/>

        <TextView
            android:id="@+id/air_name"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:layout_alignEnd="@+id/air_mode_wind_angle" />

        <TextView
            android:textColor="@color/colorWhite"
            android:id="@+id/air_mode_wind_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="风向下"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_alignBaseline="@+id/air_mode_wind_angle"
            android:layout_alignBottom="@+id/air_mode_wind_angle"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/layout_option"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="1">
            <LinearLayout
                android:id="@+id/layout_option_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:layout_gravity="center"
                        android:text="模式"/>
                    <ImageButton
                        android:id="@+id/air_mode_switch_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/air_condition_adjust_btn_selector"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:layout_gravity="center"
                        android:text="风速"/>
                    <ImageButton
                        android:id="@+id/air_button_wind_speed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/air_condition_adjust_btn_selector"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:layout_gravity="center"
                        android:text="风向"/>
                    <ImageButton
                        android:id="@+id/air_button_WIND_SWEEP_MAN"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:background="@drawable/air_condition_adjust_btn_selector"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:layout_gravity="center"
                        android:text="扫风"/>
                    <ImageButton
                        android:id="@+id/air_button_WIND_SWEEP_AUTO"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/air_condition_adjust_btn_selector"/>
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_below="@id/layout_option_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:layout_gravity="center"
                        android:text="辅热"/>
                    <ImageButton
                        android:id="@+id/air_button_addhot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/air_condition_adjust_btn_selector"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:layout_gravity="center"
                        android:text="睡眠"/>
                    <ImageButton
                        android:id="@+id/air_sleep"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/air_condition_adjust_btn_selector"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:layout_gravity="center"
                        android:text="更多功能"/>
                    <ImageButton
                        android:id="@+id/air_button_MORE_FUN"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:background="@drawable/air_condition_adjust_btn_selector"/>
                </FrameLayout>
            </LinearLayout>
        </RelativeLayout>


        <LinearLayout
            android:layout_below="@id/layout_option"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/air_button_TEMP_ADD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/air_condition_temperature_plus_btn_selector"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/colorGrey"
                    android:text="温度"/>
                <ImageButton
                    android:id="@+id/air_button_TEMP_DEC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/air_condition_temperature_subtract_btn_selector"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
                <CheckBox
                    android:id="@+id/power_switch_button"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:background="@drawable/air_condition_power_btn_selector"/>

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
