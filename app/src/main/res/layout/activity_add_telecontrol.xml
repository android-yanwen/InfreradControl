<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:attrs="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/yk_ctrl_background"
    tools:context="com.gta.administrator.infraredcontrol.air_condition.AddTelecontrolActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp">
        <com.gta.administrator.infraredcontrol.other.MyGradLayoutItem
            android:id="@+id/air_condition_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            attrs:gradlayoutSrc="@mipmap/yk_ctrl_d_air"
            attrs:gradlayoutText="奥克斯 AUX 空调"
            attrs:gradlayoutTextColor="@color/colorGrey"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"/>
        <LinearLayout
            android:layout_below="@id/air_condition_name"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <ImageButton
                android:id="@+id/last_page_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/yk_ctrl_forward"/>
            <TextView
                android:id="@+id/telecontrol_program_no_view"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:text="第1/242套遥控方案\n奥克斯-AUX-1(V3)"/>
            <ImageButton
                android:id="@+id/next_page_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/yk_ctrl_next_bg"/>

        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg_divider"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/open_prompt_view"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorGrey"
            android:text="点击下面开关按钮"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_centerInParent="true">
            <ImageButton
                android:id="@+id/power_switch_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/air_condition_switch_selector"/>
            <FrameLayout
                android:id="@+id/no_button_with_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:padding="20dp"
                android:visibility="gone">
                <ImageButton
                    android:id="@+id/no_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/air_condition_yes_btn_selector"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/colorWhite"
                    android:text="否"/>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/yes_button_with_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:padding="20dp"
                android:visibility="gone">
                <ImageButton
                    android:id="@+id/yes_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/air_condition_yes_btn_selector"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/colorWhite"
                    android:text="是"/>
            </FrameLayout>
        </RelativeLayout>

    </RelativeLayout>



</LinearLayout>
