<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/network_set_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_selector"
            android:clickable="true"
            android:padding="10dp">

            <ImageView
                android:id="@+id/network_set_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="网络设置图标"
                android:background="@mipmap/icon_net_setting"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/network_set_icon"
                android:layout_centerVertical="true"
                android:text="网络设置"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/mm_submenu_normal"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorDivide"/>

        <RelativeLayout
            android:id="@+id/device_add_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_selector"
            android:clickable="true"
            android:padding="10dp">

            <ImageView
                android:id="@+id/device_add_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="添加设备图标"
                android:background="@mipmap/icon_net_setting"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/device_add_icon"
                android:layout_centerVertical="true"
                android:text="添加设备"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/mm_submenu_normal"/>
        </RelativeLayout>

    </LinearLayout>


</ScrollView>