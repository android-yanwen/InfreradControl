-->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/open_wifi_btn"
        android:text="打开WiFi"/>
    <Button
        android:layout_below="@id/open_wifi_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/close_wifi_btn"
        android:text="关闭WiFi"/>
    <Button
        android:layout_below="@id/close_wifi_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/conn_wifi_btn"
        android:text="连接WiFi"/>


</RelativeLayout>