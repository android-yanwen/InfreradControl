<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gta.administrator.infraredcontrol.setting.BindDeviceActivity">


    <TextView
        android:id="@+id/prompt_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="左边是已经绑定的设备，右边是未绑定设备，点击设备名即可进行绑定或解除绑定。"/>

    <LinearLayout
        android:layout_below="@id/prompt_textview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/bind_device_list"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <ListView
            android:layout_below="@id/prompt_textview"
            android:id="@+id/unbind_device_list"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>
