<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gta.administrator.infraredcontrol">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".tv.HW_TvControlActivity"
            android:label="@string/hw_tv_activity" />
        <activity android:name=".AirConditionControlActivity" />
        <activity
            android:name=".tv.TvBrandsListActivity"
            android:label="@string/tv_brands_select" />
        <activity android:name=".tv.CW_TvControlActivity"
            android:label="@string/cw_tv_activity"></activity>
    </application>

</manifest>
