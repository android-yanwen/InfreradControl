<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/beij"
    android:orientation="vertical"
    tools:context=".MarqueeActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:background="#AE191F"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_title1"
            android:textSize="18dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#FFFFEC40"
            android:layout_marginTop="8dp"
            android:text="查询您的出款进度，系统准时更新动态"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_title2"
            android:textSize="18dp"
            android:textColor="#FFFFEC40"
            android:layout_gravity="center_horizontal"
            android:text="神秘彩金、返利月月送欢迎长期关注账户"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <com.lsh.XXRecyclerview.XXRecycleView
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/xxl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>